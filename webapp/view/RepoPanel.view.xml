<mvc:View
	controllerName="githubapiui5.controller.RepoPanel"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Panel
		headerText="Repositories"
		class="sapUiResponsiveMargin"
		width="auto"
	>
		<List
			class="sapUiResponsiveMargin"
			width="auto"
			items="{
				path: 'repos>/'
			}"
		>
			<items>
				<ObjectListItem
					type="Navigation"
					title="{repos>name}"
					press=".onPress"
				/>
			</items>
		</List>
	</Panel>
</mvc:View>